# ~/.zshrc - Optimized

# Fast PATH setup (no brew calls!)
export PATH="$HOMEBREW_PREFIX/bin:$HOMEBREW_PREFIX/sbin:$HOME/.local/bin:$PATH"

export EDITOR=nano

# Starship prompt
eval "$(starship init zsh)"

# Plugins - HARDCODE paths instead of $(brew --prefix)
source $HOMEBREW_PREFIX/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source $HOMEBREW_PREFIX/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# FZF integration
eval "$(fzf --zsh)"

# Modern aliases
alias ls='eza --icons'
alias ll='eza -la --icons'
alias tree='eza --tree --icons'
alias cat='bat'

# History settings
HISTSIZE=10000
SAVEHIST=10000
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS

# Add completions directory
fpath+=($HOMEBREW_PREFIX/share/zsh/site-functions)

# Fast completion initialization
autoload -Uz compinit && compinit -C

zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
